<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bg"
    style="@style/configuration"
    android:layout_width="match_parent"
    android:layout_height="94dp"
    android:alpha="1"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:gravity="center_vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/notifyList_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/home_title_gray"
            android:text="假期调休通知"/>
        <TextView
            android:id="@+id/tv_person"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:textSize="13dp"
            android:textColor="@color/home_title_gray"
            android:text="李嘉诚"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="13dp"
            android:textColor="@color/notify_context_gray"
            android:text="16：45"/>
        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13dp"
            android:textColor="@android:color/white"
            android:background="@mipmap/person_number"
            android:visibility="gone"
            android:text="问卷"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="13dp"
        android:textColor="@color/home_content_gray"
        android:text="领导人视察领导人视察领导人视察领导人视察领导人视察领导人视察领导人视察领导人视察领导人视察领导人视察领导人视察领导人视察领导人视察领导人视察领导人视察领导人视察领导人视察领导人视察领导人视察领导人视察领导人视察领导人视察领导人视察"/>



</LinearLayout>