<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/configuration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar_first" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="23dp"
                android:paddingLeft="19dp"
                android:paddingRight="19dp"
                android:paddingTop="23dp">

                <TextView
                    android:id="@+id/meetList_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_weight="1"
                    android:text="群众路线专题会"
                    android:textColor="@color/home_title_gray"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/meetList_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:layout_weight="1"
                    android:text="参会人员"
                    android:textColor="@color/home_title_gray"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="时间： 2019.09.13  15：00"
                        android:textColor="@color/meet_time_gray"
                        android:textSize="14dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间： 2019.09.13  15：00"
                    android:textColor="@color/meet_time_gray"
                    android:textSize="14dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/mine_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="17dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03.20报名"
                        android:textColor="@color/meet_time_gray"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="03.30截至"
                        android:textColor="@color/meet_time_gray"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/font_lake_blue"
                    android:id="@+id/ll_open_text">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/mine"
                        android:layout_marginLeft="12dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关于如何开展相关活动中"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:maxLength="10"
                            android:ellipsize="end"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="12.5M"
                            android:maxLength="10"
                            android:ellipsize="end"/>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_openfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="附件"
                        android:layout_marginRight="20dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="中共中央中共中央中共中央中共中央中共中央中共中央中共中央中共中央中共中央"
                    android:textColor="@color/home_content_gray"
                    android:textSize="15dp" />
            </LinearLayout>

        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="bottom"
            android:background="@color/theme_color"
            android:gravity="center"
            android:text="参加会议"
            android:textColor="@android:color/white"
            android:textSize="21dp" />
    </FrameLayout>
</LinearLayout>