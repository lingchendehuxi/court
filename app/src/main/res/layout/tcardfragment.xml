<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/configuration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:paddingTop="20dp"
        android:background="@mipmap/title_bar_bg"
        android:gravity="center"
        android:text="考勤" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/card_gray"

        >
        <CheckBox
            android:id="@+id/rb_home"
            style="@style/footer"
            android:drawableRight="@drawable/fragment_meet_ico"
            android:background="@color/chose_date_yellow"
            android:text="首页"
            android:textColor="@drawable/footer_home_textcolor" />

        <CheckBox
            android:id="@+id/rb_notify"
            style="@style/footer"
            android:drawableRight="@drawable/fragment_meet_ico"
            android:text="通知"
            android:textColor="@drawable/footer_home_textcolor" />

        <CheckBox
            android:id="@+id/rb_meet"
            style="@style/footer"
            android:drawableRight="@drawable/fragment_meet_ico"
            android:text="会议"
            android:textColor="@drawable/footer_home_textcolor" />
    </LinearLayout>



    <com.court.oa.project.tool.RefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

    </com.court.oa.project.tool.RefreshLayout>

</LinearLayout>