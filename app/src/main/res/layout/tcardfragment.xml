<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/configuration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/title_context"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@mipmap/title_bar_bg"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="考勤" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/card_gray"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_person"
            style="@style/card_top"
            android:text="人员"
            android:textColor="@drawable/footer_home_textcolor" />

        <CheckBox
            android:id="@+id/cb_time"
            style="@style/card_top"
            android:drawableRight="@drawable/fragment_tcard_ico"
            android:text="时间"
            android:textColor="@drawable/footer_home_textcolor" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mine_menu_deepgray" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:divider="@color/mine_menu_deepgray"
        android:dividerHeight="1dp" />

</LinearLayout>