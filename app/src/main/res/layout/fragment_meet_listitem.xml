<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bg"
    style="@style/configuration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="1"
    android:orientation="vertical"
    android:paddingLeft="@dimen/meet_padding"
    android:paddingRight="@dimen/meet_padding"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/meetList_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="群众路线专题会"
        android:textColor="@color/home_title_gray"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/meetList_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="11dp"
        android:text="参会人员"
        android:textColor="@color/home_title_gray"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/meetList_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间： 2019.09.13  15：00"
            android:textColor="@color/meet_time_gray"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/meetList_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间： 2019.09.13  15：00"
            android:textColor="@color/meet_time_gray"
            android:textSize="14dp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="14dp"
        android:background="@color/mine_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/meetList_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03.20报名"
            android:textColor="@color/meet_time_gray"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/meetList_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="03.30截至"
            android:textColor="@color/meet_time_gray"
            android:textSize="14dp" />

    </LinearLayout>
</LinearLayout>