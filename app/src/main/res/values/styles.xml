<resources>

    <style xmlns:custom="http://schemas.android.com/apk/res-auto" name="configuration" custom:autoScaleEnable="true" custom:designHeight="575dp" custom:designWidth="384dp" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="footer">
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="card_top">
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">45dp</item>
    </style>
    <style name="leaveuser_top">
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50.5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="question_chose">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    <!--hall_chose date-->
    <style name="top_chose">
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/chose_date_normal_bg</item>
    </style>

    <style name="progress_circle_loading">
        <item name="android:indeterminateDrawable">@drawable/progress_circle_loading</item>
    </style>


    <style name="AppTheme.Main" parent="AppTheme" >
        <item name="android:launchMode">singleTop</item>
    </style>

    <!--hall_work_style-->
    <style name="hall_work_table">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/home_time_gray</item>
    </style>
    <!--mine_style-->
    <style name="mine_menu_style">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/first_selector_color</item>
        <item name="android:textColor">@color/home_title_gray</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="mine_menu_gap_4">
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/mine_gray</item>
    </style>
    <style name="mine_menu_gap_1">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@color/mine_gray</item>
    </style>

    <style name="AppTheme.Main.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="footer_leave_style">
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:drawableLeft">@drawable/leave_type_ico</item>

    </style>
    <style name="question_style">
        <item name="android:button">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:drawableLeft">@drawable/leave_type_ico</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textColor">@color/home_title_gray</item>

    </style>

    <style name="AppTheme.Main.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Main.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="title_context">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">19dp</item>
    </style>


</resources>
